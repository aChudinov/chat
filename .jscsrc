{
    "disallowMultipleVarDecl": true,
    "requireMultipleVarDecl" : null,
    "requireSemicolons": true,

    "disallowSpacesInFunctionExpression": {
        "beforeOpeningRoundBrace": true,
        "beforeOpeningCurlyBrace": true
    },

    "disallowSpacesInFunctionDeclaration": {
        "beforeOpeningRoundBrace": true,
        "beforeOpeningCurlyBrace": true
    },

    "disallowSpacesInAnonymousFunctionExpression": {
        "beforeOpeningRoundBrace": true,
        "beforeOpeningCurlyBrace": true
    },

    "excludeFiles": [
        "frontend/.bem/cache/**",
        "frontend/.enb/**",
        ".git/**",
        "*.docs/**",
        "*.examples/**",
        "*.specs/**",
        "*.tmpl-specs/**",
        "*.tests/**",
        "*.pages/**",
        "**/*.i18n/**",
        "libs/**",
        "frontend/static/**",
        "node_modules/**",
        "frontend/*.docs/**",
        "frontend/*.examples/**",
        "frontend/*.specs/**",
        "frontend/*.tmpl-specs/**",
        "frontend/*.tests/**",
        "frontend/*.pages/**",
        "frontend/**/*.i18n/**",
        "frontend/libs/**",
        "frontend/libs.blocks/**",
        "frontend/static/**",
        "frontend/*.bundles/**",
        "node_modules/**",
        "config",
        "seeds.disable"
    ],
    "fileExtensions": [".js", ".bemtree", ".bemhtml"]
}
