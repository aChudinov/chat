.message
    position relative
    padding-left 13px
    margin-left 45px

    &__smile
        display inline-block
        margin-bottom -0.25em

    &__username
        display inline-block
        font-weight bold
        font-size 13px

    &__time
        display inline-block
        margin-left 1em
        font-size 10px
        color #777

    &__content
        margin-top 2px

    &__avatar
        position absolute
        top 0
        left -32px
