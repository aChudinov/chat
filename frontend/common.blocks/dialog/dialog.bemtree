block('dialog').def()(function(){
    var data = this.ctx.data;

    return applyCtx({
        block : this.block,
        js : true,
        content : [
            {
                elem : 'header',
                content : [
                    {
                        elem : 'info',
                        content : [
                            {
                                block : 'editable-title',
                                mix : { block : 'dialog', elem : 'title' }
                            },
                            { elem : 'name' }
                        ]
                    },
                    {
                        block : 'dialog-controls',
                        mods : { 'type' : 'channels' },
                        content : [
                            { elem : 'call' }
                        ]
                    }
                ]
            },
            {
                elem : 'history',
                content : [
                    {
                        block : 'spin',
                        mix : { block : 'dialog', elem : 'spin' },
                        mods : { theme : 'shriming', size : 'xl', visible : true }
                    },
                    { elem : 'blank', content : 'Сообщений нет' },
                    { elem : 'container' }
                ]
            },
            {
                elem : 'console',
                js : true,
                data : data
            }
        ]
    });
});
